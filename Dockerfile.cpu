FROM python:3.10-slim AS runtime

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    HF_HUB_DISABLE_SYMLINKS_WARNING=1 \
    HF_HUB_DISABLE_PROGRESS_BARS=1 \
    PATH=/opt/venv/bin:$PATH \
    VIRTUAL_ENV=/opt/venv

# Install system packages required for audio processing
RUN apt-get update && apt-get install -y --no-install-recommends \
        ffmpeg \
        sox \
        libsox-dev \
        libsndfile1 \
        nginx \
        build-essential \
        curl

WORKDIR /app

# Install uv
RUN pip install --no-cache-dir uv

# Create virtual environment
RUN uv venv /opt/venv

# Pre-install PyTorch CPU wheels to avoid pulling CUDA runtimes
RUN uv pip install --no-cache \
        --index-url https://download.pytorch.org/whl/cpu \
        torch==2.3.1 \
        torchaudio==2.3.1 \
        --python /opt/venv/bin/python

# Install Rust compiler (required for sudachipy on ARM64)
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Install Python dependencies (CPU version, without vLLM)
COPY requirements-cpu.txt /tmp/requirements-cpu.txt
RUN uv pip install --no-cache -r /tmp/requirements-cpu.txt --python /opt/venv/bin/python

# Clean build tools and cache to reduce image size
RUN apt remove -y build-essential curl && apt autoremove -y \
    && rm -rf /root/.cargo /root/.rustup \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy application code
COPY . .

# Create runtime directories
RUN mkdir -p /app/temp /app/data /app/logs \
    && chmod +x start.py /app/scripts/docker/entrypoint.sh

EXPOSE 8000

ENTRYPOINT ["/app/scripts/docker/entrypoint.sh"]
CMD ["/opt/venv/bin/python", "start.py"]
